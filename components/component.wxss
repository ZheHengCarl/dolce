/* components/component.wxss */
.fa {
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.fa-home:before {
  content: "\f015";
}
.fa-book:before {
  content: "\f02d";
}
.fa-user:before {
  content: "\f007";
}
.content {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%; 
  height: 100rpx; 
  background-color: #FFF; 
  border-top: 1px solid slategray;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.active{
  color: rgb(14, 186, 216);
}
.item .fa {
  margin-bottom: 5rpx;
  font-size: 35rpx;
}
.item text { font-size: 21rpx;}